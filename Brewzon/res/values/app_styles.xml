<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="date_picker_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/s3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--  -->
    <style name="login_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/box</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/s2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  -->
    <style name="form_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/s3</item>
    </style>

    <!--  -->
    <style name="common_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/box</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/s3</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>